<h2>Your Transactions</h2>

<h2>
  <% if @stock %>
    Transactions for <%= @stock.symbol %>
  <% else %>
    All Transactions
  <% end %>
</h2>

<% if @transactions.any? %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Symbol</th>
        <th>Type</th>
        <th>Qty</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |t| %>
        <tr>
          <td><%= t.created_at.strftime("%b %-d, %Y") %></td>
          <td><%= t.stock.symbol %></td>
          <td><%= t.transaction_type.capitalize %></td>
          <td><%= t.quantity %></td>
          <td>$<%= number_with_precision(t.price, precision: 2) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No <%= @stock ? @stock.symbol : "" %> transactions yet.</p>
<% end %>