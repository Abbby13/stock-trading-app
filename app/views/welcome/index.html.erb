<% if current_user %>
  <p>Welcome, <%= current_user.email %>!</p>

  <% if current_user.role == "admin" %>
    <%= link_to "Go to Admin Dashboard", admin_dashboard_path %>
  <% else %>
    <%= link_to "Go to Trader Dashboard", trader_dashboard_path %>
  <% end %>

  <%= button_to "Log Out", logout_path, method: :delete %>
<% else %>
  <p>Welcome to the Stock Trading App!</p>
  <%= link_to "Log In", login_path %> or
  <%= link_to "Sign Up", signup_path %>
<% end %>

