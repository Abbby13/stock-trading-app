<h2>Log In</h2>

<%= form_with url: login_path, method: :post do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log In" %>
  </div>
<% end %>

<p>Don't have an account? <%= link_to "Sign up", signup_path %></p>
